             x:Class="WeatherApp.Pages.MainPage"
             NavigationPage.HasNavigationBar="False" >

    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Label Text="Welcome to WeatherApp!" HorizontalTextAlignment="Center" TextColor="Gray" FontSize="Small"/>
        <Button Text="Узнать погоду" x:Name="getWhethee" Clicked="GetWeather_Click" />
        <Button Text="Установить будильник" x:Name="setAlarm" Clicked="setAlarm_Clicked" />
    </StackLayout>

</ContentPage>
